<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy1</item>        <!-- TOOLBAR COLOR -->
        <item name="colorPrimaryVariant">@color/navy2</item> <!-- BACKGROUND COLOR -->
        <item name="colorPrimaryDark">@color/navy3</item>    <!-- DARK TILE COLOR -->
        <item name="colorAccent">#4A617C</item>         <!-- LIGHT TILE COLOR -->

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/navy4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>