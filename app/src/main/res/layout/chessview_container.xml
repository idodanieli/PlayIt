<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chessview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant">

    <TextView
        android:id="@+id/playerOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlayerTextView"
        android:text="Opponent Player"
        android:visibility="invisible"
        android:layout_above="@id/herosCapturedPieces"/>

    <com.idodanieli.playit.games.chess.ui.CapturedPiecesView
        android:id="@+id/herosCapturedPieces"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/chess_view" />

    <com.idodanieli.playit.games.chess.ui.ChessView
        android:id="@+id/chess_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/playerHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlayerTextView"
        android:text="This Player"
        android:visibility="invisible"
        android:layout_below="@id/chess_view"/>

    <com.idodanieli.playit.games.chess.ui.CapturedPiecesView
        android:id="@+id/opponentsCapturedPieces"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/playerHero" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/gameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/gameDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>