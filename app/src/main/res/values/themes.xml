<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_wood</item>
        <item name="colorPrimaryVariant">@color/dark_wood</item>
        <item name="colorPrimaryDark">@color/red_wood</item>
        <item name="colorAccent">@color/light_wood</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="timerBackground">@drawable/round_corner_wood</item>
        <item name="timerSidePadding">30dp</item>
        <item name="timerTopBottomPadding">10dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/light_wood</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- PLAYER TEXTVIEW -->
    <style name="PlayerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- PLAYER INFO LINEAR LAYOUT -->
    <style name="PlayerLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- CAPTURED PIECES VIEW -->
    <style name="PlayerCapturedPieceView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <!-- TIMER -->
    <style name="Timer">
        <item name="android:paddingLeft">?timerSidePadding</item>
        <item name="android:paddingRight">?timerSidePadding</item>
        <item name="android:paddingTop">?timerTopBottomPadding</item>
        <item name="android:paddingBottom">?timerTopBottomPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?timerBackground</item>
    </style>
</resources>